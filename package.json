    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "libphonenumber-js": "^1.12.6",
    "mongoose": "^8.13.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
